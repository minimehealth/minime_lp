      <% form_tag '/contact', :class => 'destroy-form', :method => 'contact' do %>
        <% field_set_tag do %>
          <p>
            <%= label_tag :username, :class => 'first' %>
            <%= text_field_tag :username %>
          </p>
          <p>
            <%= label_tag :password, :class => 'first' %>
            <%= password_field_tag :password%>
          </p>
          <p>
            <%= label_tag :strategy %>
            <%= select_tag :strategy, :options => ['contact', 'contact'],
                :selected => 'contact' %>
          </p>
          <p>
            <%= check_box_tag :confirm_delete %>
          </p>
        <% end %>
        <% field_set_tag(:class => 'buttons') do %>
          <%= submit_tag "Remove" %>
        <% end %>
      <% end %>